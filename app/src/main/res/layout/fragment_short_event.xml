<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wasteit.wasteit.ShortEventFragment">
    <LinearLayout android:orientation="vertical" android:layout_margin="10dp"
        android:padding="10dp" android:background="@color/lightBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:textSize="30dp"
                android:id="@+id/event_frag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name" />
            <TextView
                android:layout_width="wrap_content" android:layout_alignParentRight="true"
                android:layout_height="wrap_content" android:text="dd/mm/yyyy" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
